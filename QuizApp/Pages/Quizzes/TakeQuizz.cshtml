@page 
@model QuizApp.Pages.Quizzes.TakeQuizzModel
@{
}
<div>
    <h2>@Model.Quizzname</h2>
    <div id="timer"></div>
    <form method="post" id="@ViewData["Id"]">
        @{
            int index = 1;
        }
        @for (var i = 0; i < Model.Questions.Count; i++)
        {
                <div class="question-container">
                    <a class="question">@index.@Model.Questions[i].Content</a>

                    <div class="choice">
                        <input type="radio" id="@ViewData["Id"]_A_@i" name="ListQuizz[@i]" value="A" />
                        <label for="@ViewData["Id"]_A_@i">@Model.Questions[i].ChoiceA</label>
                    </div>
                    <div class="choice">
                        <input type="radio" id="@ViewData["Id"]_B_@i" name="ListQuizz[@i]" value="B" />
                        <label for="@ViewData["Id"]_B_@i">@Model.Questions[i].ChoiceB</label>
                    </div>
                    <div class="choice">
                        <input type="radio" id="@ViewData["Id"]_C_@i" name="ListQuizz[@i]" value="C" />
                        <label for="@ViewData["Id"]_C_@i">@Model.Questions[i].ChoiceC</label>
                    </div>
                    <div class="choice">
                        <input type="radio" id="@ViewData["Id"]_D_@i" name="ListQuizz[@i]" value="D" />
                        <label for="@ViewData["Id"]_D_@i">@Model.Questions[i].ChoiceD</label>
                    </div>
                    <input type="hidden" id="@ViewData["Id"]_O_@i" name="ListQuizz[@i]" value="O" />
                </div>
            index++;
        }

        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </form>
</div>

<style>
    .question-container {
        margin-bottom: 20px;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .question {
        font-weight: bold;
        font-size: 1.2em;
        margin-bottom: 10px;
        display: block;
    }

    .choice {
        margin: 5px 0;
    }

    .choice label {
        margin-left: 10px;
    }

    .btn {
        display: block;
        width: 100%;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-lg {
        padding: 10px 16px;
        font-size: 18px;
        border-radius: 6px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_StoreRadio");

    }
}
