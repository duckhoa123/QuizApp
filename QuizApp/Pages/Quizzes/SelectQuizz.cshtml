@page
@model QuizApp.Pages.Quizzes.SelectQuizzModel
@{

}
<div>
    <h2 class="title">Please select a quizz</h2>

    @foreach (var item in Model.QuizzModels)
    { 
            <a class="quiz-link" asp-page="./TakeQuizz" asp-route-Id="@item.Id">@item.Name</a>
    }
</div>

<style>
    .title {
        font-size: 1.5em;
        color: #333;
        margin-bottom: 20px;
    }

    .quiz-link {
        display: block;
        margin: 10px 0;
        padding: 10px;
        background-color: #f9f9f9;
        color: #007bff;
        text-decoration: none;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .quiz-link:hover {
        background-color: #e9ecef;
        border-color: #007bff;
    }
</style>

