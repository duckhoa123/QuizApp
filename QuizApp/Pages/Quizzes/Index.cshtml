@page
@model QuizApp.Pages.Quizzes.IndexModel
@{
}
<div class="features_items">
    <h2 class="title">Quiz Page</h2>
         


          <form method="post">
        @for (var i = 0; i < Model.Questions.Count; i++)
        {<div>
                 <a>@Model.Questions[i].Content</a
     
                <div>
                           
                                <input type="radio" id="A_@i" name="ListQuizz[@i]" value="A" />
                                <label for="A_@i">@Model.Questions[i].ChoiceA</label>
                </div>
                     <div>
                                                <input type="radio" id="B_@i" name="ListQuizz[@i]" value="B" />
                                    <label for="A_@i">@Model.Questions[i].ChoiceB</label>
                    </div>
                         <div>
                                                <input type="radio" id="C_@i" name="ListQuizz[@i]" value="C" />
                                    <label for="C_@i">@Model.Questions[i].ChoiceC</label>
                    </div>
                         <div>
                                        <input type="radio" id="D_@i" name="ListQuizz[@i]" value="D" />
                                    <label for="D_@i">@Model.Questions[i].ChoiceD</label>
                    </div>
                           </div>
        }
        <button type="submit">Submit</button>
    </form>
    
       <a >@ViewData["Score"]</a>
        <a class="btn" asp-page="/Cart/Index" asp-route-handler="Add" >Take new quizz</a>
</div>
