@page
@model QuizApp.Pages.Score.IndexModel
@{
}
<h2 class="score-title">Your score for @Model.QuizzName is @Model.Score / @Model.QuesNum</h2>
<a class="back-link" asp-page="/Quizzes/TakeQuizz" asp-route-Id="@Model.Id">Back to test</a>

<style>
    .score-title {
        font-size: 1.5em;
        color: #333;
        margin-bottom: 20px;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

    .back-link:hover {
        background-color: #0056b3;
    }
</style>