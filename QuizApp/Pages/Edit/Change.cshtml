@page 
@model QuizApp.Pages.Edit.ChangeModel
@{
}
<a class="btn add-question-btn" asp-page="/Edit/AddQues" asp-route-Id="@ViewData["id"]">Add question</a>
<h3 class="edit-questions-title">Edit Questions</h3>

 <h4 class="edit-questions-title"> @ViewData["Title"]</h4>
@foreach (var item in Model.Questions)
{
        <form method="post" class="edit-question-form">
            <div class="mb-3" style="display: none;">
                <label class="form-label" asp-for="EditViewModel.Id"></label>
                <input asp-for="EditViewModel.Id" class="form-control" value="@item.Id" readonly />
                <span asp-validation-for="EditViewModel.Id" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="EditViewModel.Content">Content</label>
                <input asp-for="EditViewModel.Content" class="form-control" value="@item.Content" />
                <span asp-validation-for="EditViewModel.Content" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EditViewModel.ChoiceA">Choice A</label>
                <input asp-for="EditViewModel.ChoiceA" class="form-control" value="@item.ChoiceA" />
                <span asp-validation-for="EditViewModel.ChoiceA" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EditViewModel.ChoiceB">Choice B</label>
                <input asp-for="EditViewModel.ChoiceB" class="form-control" value="@item.ChoiceB" />
                <span asp-validation-for="EditViewModel.ChoiceB" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EditViewModel.ChoiceC">Choice C</label>
                <input asp-for="EditViewModel.ChoiceC" class="form-control" value="@item.ChoiceC" />
                <span asp-validation-for="EditViewModel.ChoiceC" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EditViewModel.ChoiceD">Choice D</label>
                <input asp-for="EditViewModel.ChoiceD" class="form-control" value="@item.ChoiceD" />
                <span asp-validation-for="EditViewModel.ChoiceD" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Correct Answer</label>
            @if (item.CorrectAnswer == 'A')
            {
                        <select asp-for="EditViewModel.CorrectAnswer" class="form-control">
                            <option value="A" selected>A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                        </select>
            }
            @if (item.CorrectAnswer == 'B')
            {
                        <select asp-for="EditViewModel.CorrectAnswer" class="form-control">
                            <option value="A">A</option>
                            <option value="B" selected>B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                        </select>
            }
            @if (item.CorrectAnswer == 'C')
            {
                        <select asp-for="EditViewModel.CorrectAnswer" class="form-control">
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C" selected>C</option>
                            <option value="D">D</option>
                        </select>
            }
            @if (item.CorrectAnswer == 'D')
            {
                        <select asp-for="EditViewModel.CorrectAnswer" class="form-control">
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D" selected>D</option>
                        </select>
            }
                <span asp-validation-for="EditViewModel.CorrectAnswer" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
}

<style>
    .add-question-btn {
        margin-bottom: 20px;
        padding: 10px 15px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

    .add-question-btn:hover {
        background-color: #218838;
    }

    .edit-questions-title {
        font-size: 1.5em;
        color: #333;
        margin-bottom: 20px;
    }

    .edit-question-form {
        margin-bottom: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        margin-bottom: 10px;
    }

    .text-danger {
        color: #dc3545;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>
