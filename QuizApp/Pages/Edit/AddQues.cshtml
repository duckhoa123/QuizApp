@page
@model QuizApp.Pages.Edit.AddQuesModel
@{
}



<form method="post">
    <h1 class="mb-3">Add Question</h1>
    <div class="mb-3">
        <label class="form-label" asp-for="QuestionViewModel.Content"></label>
        <input asp-for="QuestionViewModel.Content" class="form-control" />
        <span asp-validation-for="QuestionViewModel.Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuestionViewModel.ChoiceA"></label>
        <input asp-for="QuestionViewModel.ChoiceA" class="form-control" />
        <span asp-validation-for="QuestionViewModel.ChoiceA" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="QuestionViewModel.ChoiceB"></label>
        <input asp-for="QuestionViewModel.ChoiceB" class="form-control" />
        <span asp-validation-for="QuestionViewModel.ChoiceB" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="QuestionViewModel.ChoiceC"></label>
        <input asp-for="QuestionViewModel.ChoiceC" class="form-control" />
        <span asp-validation-for="QuestionViewModel.ChoiceC" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="QuestionViewModel.ChoiceD"></label>
        <input asp-for="QuestionViewModel.ChoiceD" class="form-control" />
        <span asp-validation-for="QuestionViewModel.ChoiceD" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label>Correct Answer</label>
            <select asp-for="QuestionViewModel.CorrectAnswer" class="form-control" asp-items="Model.Options">

            </select>
            <span asp-validation-for="QuestionViewModel.CorrectAnswer" class="text-danger"/>
        </div>

       
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        
    }
}

